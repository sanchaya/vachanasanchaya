<%= render "layouts/back_button" %>
<div style="clear:both"> </div>

<div class="row">
  <div class="span6"> 
    <div class="review-box">
     <div class="control-group">
       Original Vachana:
     </div> 
     <div class="original-vachana-box"> 
      <%= raw @vachana.vachana.gsub(/\n/, '<br />') %>
    </div>

    <div class="original-vachana-lable">
     Original Kramasanke:
   </div> 

   <div class="original-vachana-input">
     <%= @vachana.vachanaid %>
   </div> 

   <div class="original-vachana-lable">
     Vachanakaara:
   </div> 

   <div class="original-vachana-input">
     <%= @vachana.vachanakaara.name %>
   </div> 

 </div>
</div>

<div class="span6">

  <% if params[:review] == "yes" %>
  <div class="review-box"> 
    <%= form_for [@reviewer,@review_vachana], html: {class: "form-inline"} do |f| %>
    <%= f.hidden_field :vachana_id, value: @vachana.id %>
    <div class="control-group">
      Review Vachana:
    </div>
    <div class="control-group">
      <%= f.text_area :review_vachana, value: @vachana.vachana  %>
    </div>

    <div class="control-group">
     Review Kramasanke:
   </div>

   <div class="control-group">
    <%= f.text_field :review_vachanaid,  value: @vachana.vachanaid  %>
  </div>

  <div class="control-group">
    <%= f.submit "Update" %>
  </div>

  <% end %> 
</div>

<% else %>
<div class="review_button"> 
  <%= link_to "Review",  new_user_review_vachana_path(current_user,vachana_id: @vachana.id, review: "yes"), confirm: "Are You Sure ?" , class: "btn" %>
</div>
<% end %>

</div>
</div>