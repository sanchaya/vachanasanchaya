<%= render "layouts/back_button" %>

<%- model_class = ReferenceBook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:book_name) %>:</strong></dt>
  <dd><%= @reference_book.book_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:book_volume) %>:</strong></dt>
  <dd><%= @reference_book.book_volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publisher) %>:</strong></dt>
  <dd><%= @reference_book.publisher %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @reference_book.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:published_year) %>:</strong></dt>
  <dd><%= @reference_book.published_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isbn) %>:</strong></dt>
  <dd><%= @reference_book.isbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language) %>:</strong></dt>
  <dd><%= @reference_book.language %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reference_type) %>:</strong></dt>
  <dd><%= @reference_book.reference_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reference_books_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reference_book_path(@reference_book), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reference_book_path(@reference_book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
