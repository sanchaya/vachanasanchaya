<%- model_class = User -%>
<div class="page-header">
  <h1> <%= @user.id %></h1>
</div>
<div class="row">
  <dl class="dl-horizontal span6">
    <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= @user.email %></dd>

    <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
    <dd><%= @user.role.name %></dd>
  </dl>

  <div class="span4">
    <%= link_to "Assign ", assign_new_vachanakaaras_user_path(@user) , :class => 'btn'%>
    <%= link_to "Remove ", assign_new_vachanakaaras_user_path(@user) , :class => 'btn btn-danger'%>
    <div class="list-assigned-vachanakaaras"> 
      <% @user.user_vachanakaaras.each do |u_v| %>
      <%= u_v.vachanakaara.name %> <br />
      <% end %>
    </div>
  </div>
</div> 




<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
  users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
  edit_user_path(@user), :class => 'btn' %>
  
  <%= link_to "Delete User",
  user_path(@user),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
</div>
