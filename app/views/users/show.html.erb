<%= render "layouts/back_button" %>

<%- model_class = User -%>
<div class="page-header">
  <h1> <%= @user.name %></h1>
</div>
<div class="row">
  <dl class="dl-horizontal span6">
    <dt><strong>ಇಮೇಲ್:</strong></dt>
    <dd><%= @user.email %></dd>

    <dt><strong>ಕರ್ತವ್ಯ:</strong></dt>
    <dd><%= @user.role.name %></dd>
  </dl>

  <% if @user.is_reviewer? %>
  <div class="span4">
    <%= link_to "ವಚನಕಾರರನ್ನು ವಹಿಸಿ", assign_new_vachanakaaras_user_path(@user) , :class => 'btn'%>
    <% unless @user_vachanakaaras.blank? %>
    <%#= link_to "Remove ", assign_new_vachanakaaras_user_path(@user) , :class => 'btn btn-danger'%>
    <div class="list-assigned-vachanakaaras"> 
      <% @user_vachanakaaras.each do |u_v| %>
      <%= u_v.vachanakaara.name %> <br />
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>

</div> 



<div class="form-actions">
  <%= link_to "ಹಿಂದೆ",
  users_path, :class => 'btn'  %>
  <%= link_to "ಬಳಕೆದಾರರ ವಿವರ ಬದಲಿಸಿ",
  edit_user_path(@user), :class => 'btn' %>
  
  <%= link_to "ಬಳಕೆದಾರರನ್ನು ಅಳಿಸಿ",
  user_path(@user),
  :method => 'delete',
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
  :class => 'btn btn-danger' %>
</div>
