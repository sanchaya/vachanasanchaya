  <div class="row">


   <div class= "span3" >
    <% unless @results.blank? %>
    <div class="graph-space" >
      <div id="container" style="width: 250px; height: <%=get_height_for_graph %>px;   margin: 10px auto;"></div>
    </div>
    <% end %>
  </div>


    <div class="span9">
     <% if @results %>
     <% if @results.blank?  %>
     <%= t :no_vachana_found %>

     <% else %>
     <div class= " vachanas_load" %>
       <%= render "results" %>
     </div>
     <%= link_to "#{t :read_more}...", vachanas_path(params: params, :page => @results.next_page), :class => 'load-more-vachanas',:disable_with => "#{t :please_wait}...", :remote => true if @results.next_page %>
     <% end %>

     <% end %>
